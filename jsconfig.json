{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "checkJs": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.js",
        "./*.js",
        "test/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}